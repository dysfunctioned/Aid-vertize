{
    "manifest_version": 3,
    "name": "Aid-vertize",
    "description": "Aid-vertize Beta/MVP browser extention",
    "version": "1.0.0",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Aid-vertize",
        "default_icon": "icon.png"
    },
    "chrome_url_overrides": {
        "newtab": "newTab.html"
    },
    "permissions": [
        "tabs",
        "bookmarks",
        "storage",
        "identity",
        "history",
        "sessions",
        "topSites",
        "scripting",
        "activeTab"
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "sidebar.js",
                "sidebar.css",
                "*.svg"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}